<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:VainZero.WpfReportPrinting.Demo.SampleReports"
    >
    <DataTemplate DataType="{x:Type local:ReportSelector}">
        <ListBox ItemsSource="{Binding Reports}" SelectedItem="{Binding SelectedItem.Value}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <ContentPresenter Content="{Binding Key}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DataTemplate>
    
    <!-- サンプルとなるレポートの一覧 -->
    
    <DataTemplate DataType="{x:Type local:HelloWorldPageViewModel}">
        <Grid Margin="20">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" FontSize="30" Text="ハローワールド" />
                <TextBlock HorizontalAlignment="Right" Text="2016/08/31" />
                <TextBlock Text="Hello world!" />
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
