    <DataTemplate DataType="{x:Type local:OrderFormPage}">
        <DataTemplate.Resources>
            <Style TargetType="{x:Type headeredGrid:HeaderedGridHeaderCell}">
                <Setter Property="Padding" Value="10,0,10,0" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="BorderBrush" Value="Black" />
                <Setter Property="BorderThickness" Value="0,1,1,1" />
                <Style.Triggers>
                    <Trigger Property="Grid.Column" Value="0">
                        <Setter Property="BorderThickness" Value="1" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="RowCellStyle" TargetType="{x:Type headeredGrid:HeaderedGridRowCell}">
                <Setter Property="Padding" Value="10,0,10,0" />
                <Setter Property="BorderBrush" Value="Black" />
                <Setter Property="BorderThickness" Value="0,0,1,1" />
                <Style.Triggers>
                    <Trigger Property="Grid.Column" Value="0">
                        <Setter Property="BorderThickness" Value="1,0,1,1" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style BasedOn="{StaticResource RowCellStyle}" TargetType="{x:Type headeredGrid:HeaderedGridRowCell}" />
            <Style
                x:Key="NumberCellStyle"
                BasedOn="{StaticResource RowCellStyle}"
                TargetType="{x:Type headeredGrid:HeaderedGridRowCell}">
                <Setter Property="HorizontalContentAlignment" Value="Right" />
            </Style>
        </DataTemplate.Resources>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  ヘッダー  -->
            <StackPanel>
                <TextBlock
                    HorizontalAlignment="Left"
                    FontSize="10"
                    Text="安全運転確認書" />
                <TextBlock HorizontalAlignment="Right" Text="{Binding Header.OrderDate, StringFormat=yyyy年MM月dd日}" />
                <TextBlock HorizontalAlignment="Right">
                    ページ<Run Text="{Binding PageIndex, Mode=OneTime}" />
                    /<Run Text="{Binding PageCount, Mode=OneTime}" />
                </TextBlock>

                <Image
                    Width="88"
                    Height="58"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="C:\Users\p.r-itoh\source\repos\VainZero.WpfReportPrinting\VainZero.WpfReportPrinting.Demo\mapsample.png"
                    Stretch="Fill" />

                <oxy:Plot
                    Title="Binding ItemsSource"
                    Grid.Row="1"
                    Subtitle="{Binding Subtitle}">
                    <oxy:Plot.Series>
                        <oxy:LineSeries
                            Title="Value"
                            DataFieldX="Time"
                            DataFieldY="Value"
                            ItemsSource="{Binding Measurements}"
                            StrokeThickness="2"
                            Color="Blue" />
                        <oxy:LineSeries
                            Title="Maximum"
                            DataFieldX="Time"
                            DataFieldY="Maximum"
                            ItemsSource="{Binding Measurements}"
                            LineStyle="Dash"
                            StrokeThickness="2"
                            Color="Red" />
                        <oxy:LineSeries
                            Title="Minimum"
                            DataFieldX="Time"
                            DataFieldY="Minimum"
                            ItemsSource="{Binding Measurements}"
                            LineStyle="Dot"
                            StrokeThickness="2"
                            Color="Green" />
                    </oxy:Plot.Series>
                </oxy:Plot>

                <oxy:PlotView
                    Controller="{Binding Controller}"
                    DataContext="{Binding Sample1}"
                    Model="{Binding Model}" />

            </StackPanel>
            <!--  明細  -->
            <headeredGrid:HeaderedGrid
                Grid.Row="1"
                Margin="0,20,0,20"
                ItemsSource="{Binding Items}">
                <headeredGrid:HeaderedGrid.Columns>
                    <headeredGrid:HeaderedGridColumn
                        Width="50"
                        CellBinding="{Binding Name}"
                        Header="発生日" />
                    <headeredGrid:HeaderedGridColumn
                        Width="50"
                        CellBinding="{Binding TotalPrice}"
                        CellStyle="{StaticResource NumberCellStyle}"
                        Header="{Binding Header.OrderDate, StringFormat=yyy/MM/dd hh:mm}" />

                </headeredGrid:HeaderedGrid.Columns>
            </headeredGrid:HeaderedGrid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
